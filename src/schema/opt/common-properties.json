{
    "$id": "https://magicsoftware.com/schemas/xpi/opt/project/common-properties",
    "type": "object",
    "$defs" : {
        "logging" : {  
            "description": "Logging properties",
            "type": "object",
            "properties" : {
                "loggingScope" : {
                    "type": "string",
                    "default": "No",
                    "enum": [
                        "No",
                        "Step",
                        "Method",
                        "Full"
                    ]},
                    "stepLoggingOptions" : {
                    "type": "string",
                    "default": "Before",
                    "enum": [
                        "Before",
                        "After",
                        "Full"
                    ]
                },
                "message" : {
                    "type": "string"
                },
                "blob": {
                    "type": "string"
                },
                "fileExtension": {
                    "type": "string",
                    "default": "",
                    "enum": [
                        "TXT",
                        "XML",
                        "ZIP",
                        ""
                    ]
                }
            }
        },
        "interface" : {
            "type": "object",
            "properties": {
                "interface" : {
                    "type": "string",
                    "description": "a type of an interface supported by a component",
                    "enum": [
                    "Method",
                    "XML"
                    ]
                }
            },
            "required": ["interface"]
        }
    }

}