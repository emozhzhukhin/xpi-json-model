{
  "$id": "https://magicsoftware.com/schemas/xpi/opt/project/flow",
  "description" : "XPI flow description",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The flow's name"
    },
    "description": {
      "type": "string",
      "description": "Enter a description of the flow"
    },
    "autoRepeat": {
      "type": "boolean",
      "default": false
    },
    "autoStart": {
      "type": "boolean",
      "default": false
    },
    "dbTransaction": {
      "type": "boolean",
      "default": true
    },
    "enable": {
      "type": "boolean",
      "default": true
    },
    "active": {
      "type": "boolean",
      "default": true
    },
    "maxInstances": {
      "type": "integer",
      "default": 0
    },
    "recoveryPolicy": {
      "type": "string",
      "default": "None",
      "enum": [
        "Abort",
        "Restart",
        "Save Point",
        "None"
      ]
    },
    "timeoutPolicy": {
      "type": "string",
      "default": "None",
      "enum": [
        "Abort",
        "Restart",
        "None"
      ]
    },
    "timeoutValue": {
      "type": "integer",
      "default": 0
    },
    "comments": {
      "type": "string"
    },
    "steps": {
      "type": "array",
      "items" : {
        "$ref": "https://magicsoftware.com/schemas/xpi/opt/project/step"
      }
    },
    "relations" : {
      "type": "array",
      "items": {
        "$ref": "https://magicsoftware.com/schemas/xpi/opt/project/relation"
      }
    },
    "triggers": {
      "type": "array",
      "items": {
        "$ref": "https://magicsoftware.com/schemas/xpi/opt/project/trigger"
      }
    }
  }
}