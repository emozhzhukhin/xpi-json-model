{
  "$id": "https://magicsoftware.com/schemas/xpi/opt/project/trigger",
  "description" : "XPI trigger description",
  "type": "object",

  "properties": {
    "triggerId": {
      "type": "string",
      "description": "trigger id is requiried as a trigger name is not unique"
    },

    "name": {
      "type": "string",
      "description": "Trigger name",
      "minLength": 1,
      "maxLength": 30
    },

    "description": {
      "type": "string",
      "description": "Trigger description"
    },

    "component": {
      "$ref": "https://magicsoftware.com/schemas/xpi/opt/component",
      "description": "A name and probably a description of a component name should be here"
    }

  },
  "required" : ["triggerId", "name", "component"],
  "allOf": [
    {
      "if": {
        "type":"object", "properties" :{"component": {"type":"object", "properties": {"needLogging" : {"const": true}}}}},
      "then": {
        "$ref": "https://magicsoftware.com/schemas/xpi/opt/project/common-properties#/$defs/logging" 
      }
    },
    {
      "if": {
        "type":"object", "properties" :{"component": {"type":"object", "properties": {"needResource" : {"const": true}}}}},
      "then": {
        "type": "object",
        "properties" : {
          "service" : {
            "$ref": "https://magicsoftware.com/schemas/xpi/opt/resources/resource-element"
          }
        }
      }
    }
  ],
  "unevaluatedProperties": false
}