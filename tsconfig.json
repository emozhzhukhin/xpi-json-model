{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "declaration": true,
      "outDir": "./lib",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "noEmitOnError": true,
      "strict": true,
      "sourceMap": true
    },
    "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node"
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"]

  }